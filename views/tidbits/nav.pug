mixin nav
  nav(class='nav')
    form(method='GET')
      input.search(type='text', placeholder='Search' name='wiki')
    a.logo(href='/')
      img.logo(src="data:image/svg+xml;charset=UTF-8;base64,")
    ul.nav-list
      li.nav-item
        a(href='/wiki')
          span Wiki
      li.nav-item
        a(href='/self')
          span Self
